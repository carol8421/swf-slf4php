{

	"appenders" : [
	
		{
			"name" : "MainLogFiles",
			"type" : "cygnus\\logging\\config\\builder\\monolog\\MonologProxyAppenderBuilder",
			"handlers" : [
				{
					"bubble" : true,
					"type" : "cygnus\\logging\\config\\builder\\monolog\\MonologStreamHandlerBuilder",
					"stream" : "${APP_ROOT_DIR}/application.log",
					"formatter": {
						"type" : "cygnus\\logging\\config\\builder\\monolog\\MonologLineFormatterBuilder",
						"format" : "[%datetime%] %extra.loggerName%.%level_name%: %message% %context% %extra%\n\n"
					}
				},
				{
					"bubble" : true,
					"level" : "ERROR",
					"type" : "cygnus\\logging\\config\\builder\\monolog\\MonologStreamHandlerBuilder",
					"stream" : "${APP_ROOT_DIR}/error.log",
					"formatter": {
						"type" : "cygnus\\logging\\config\\builder\\monolog\\MonologLineFormatterBuilder",
						"format" : "[%datetime%] %extra.loggerName%.%level_name%: %message% %context% %extra%\n\n"
					}
					
				}				
			]
		}
	],

	"loggers" : [
		{
			"name" : "cygnus.phpbasic",
			"level" : "WARNING",
			"appenders" : "MainLogFiles"
		},
		{
			"level" : "INFO",
			"appenders" : ["MainLogFiles"]
		}
	]
}