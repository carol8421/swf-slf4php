{
    "name": "wwwind/logging",
    "description": "WWWind logging facility - inspired by Java slf4j library",
    "version": "1.0.0",
    "keywords": ["logging"],
    "homepage": "http://gitlab.wwwind.hu:2443/public-projects/logging",
    "license": "Apache-2.0",
    "authors": [
    	{
    		"name": "Attila Wind (ironhawk)",
    		"email": "attilaw@wwwind.hu",
    		"role": "Developer"
    	}
    ],
    "require": {
        "php": ">= 5.3.0",
        "psr/log": "1.0.*",
        "monolog/monolog" : "1.0.*"
    },
    "require-dev": {
    	"behat/behat" : "3.0.*",
    	"mockery/mockery": "0.9.*",
    	"phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "psr-4": {
        	"wwwind\\" : "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
        	"examples", "tests"
        ]
	},
    "config": {
        "bin-dir": "bin"
    }	
}
